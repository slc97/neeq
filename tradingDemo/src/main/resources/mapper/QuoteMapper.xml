<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.neeq.tradingDemo.dao.QuoteMapper">
    <resultMap id="QuoteInfoMap" type="com.neeq.tradingDemo.model.Quote">
        <id column="id" property="id"/>
        <result column="stock_id" property="stockId"/>
        <result column="stock_name" property="stockName"/>
        <result column="yest_closing_price" property="yestClosingPrice"/>
        <result column="today_opening_price" property="todayOpeningPrice"/>
        <result column="transaction_price" property="transactionPrice"/>
        <result column="transaction_number" property="transactionNumber"/>
        <result column="transaction_total" property="transactionTotal"/>
    </resultMap>
    
    <select id="getAllQuotes" resultMap="QuoteInfoMap">
        select
            id,
            stock_id,
            stock_name,
            yest_closing_price,
            today_opening_price,
            transaction_price,
            transaction_number,
            transaction_total
        from quote
    </select>
    
    <select id="getQuoteById" parameterType="Integer" resultMap="QuoteInfoMap">
        select
            id,
            stock_id,
            stock_name,
            yest_closing_price,
            today_opening_price,
            transaction_price,
            transaction_number,
            transaction_total
        from quote
        where id=#{id}
    </select>

    <insert id="addQuote" parameterType="com.neeq.tradingDemo.model.Quote" useGeneratedKeys="true" keyProperty="id">
        insert into quote
        values(null,#{stockId},#{stockName},#{yestClosingPrice},
               #{todayOpeningPrice},#{transactionPrice},
               #{transactionNumber},#{transactionTotal})
    </insert>
</mapper>